{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ReClip",
  "version": "1.0.0",
  "identifier": "com.reclip.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "ReClip",
        "width": 800,
        "height": 600,
        "transparent": true,
        "decorations": false,
        "shadow": true,
        "visible": false
      },
      {
        "label": "quick",
        "title": "Quick Menu",
        "width": 320,
        "height": 450,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "$RESOURCE/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Charles Gameti",
    "copyright": "Â© 2026 Charles Gameti",
    "shortDescription": "Intelligent Clipboard Manager",
    "longDescription": "ReClip is a powerful cross-platform clipboard history manager with rich content preview, OCR, code snippets, templates, and more.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}